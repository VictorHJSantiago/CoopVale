# Configurações da Aplicação
SECRET_KEY=sua-chave-secreta-aqui
DATABASE_URL=sqlite:///instance/coopvale.db

# Mercado Pago - Gateway de Pagamento
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=seu-access-token-aqui
MERCADOPAGO_PUBLIC_KEY=sua-public-key-aqui
MERCADOPAGO_WEBHOOK_SECRET=seu-webhook-secret-aqui

# URL para Webhooks (produção)
# Em desenvolvimento: http://localhost:5000
# Em produção: https://seudominio.com
WEBHOOK_URL=http://localhost:5000

# Criptografia de Dados Sensíveis
# Gere uma chave com: flask gerar-chave-criptografia
ENCRYPTION_KEY=sua-chave-de-criptografia-aqui

# Configurações de Email
MAIL_ENABLED=false
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_DEFAULT_SENDER=noreply@agrofeira.com

# Configurações adicionais (opcional)
DEBUG=true
FLASK_ENV=development
